<div class="div-editar">
    <h1>Editar libro</h1>
    <form method="post" action="/libros/actualizar">

        <input value="<%= libro.id %>" name="id" type="hidden">
       

        <div class="form-group">
            <label for="titulo">Titulo: </label>
            <input value="<%= libro.titulo %>" required id="titulo" placeholder="Titulo del libro"
                class="form-control" type="text" name="titulo">
        </div>

        <div class="form-group">
            <label for="precio">Precio: </label>
            <input value="<%= libro.precio %>" required id="precio" placeholder="Precio del libro"
                class="form-control" type="number" name="precio">
        </div>

        <div class="form-group">
            <label for="isbn">Isbn: </label>
            <input value="<%= libro.isbn %>" required id="isbn" placeholder="Isbn del libro"
                class="form-control" type="number" name="isbn">
        </div>

        <div class="form-group">
            <label for="detalle">Detalle: </label>
            <input value="<%= libro.detalle %>" required id="detalle" placeholder="Detalle del libro"
                class="form-control" type="text" name="detalle">
        </div>
<br>



        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            

        </div>
    </form>
</div>

